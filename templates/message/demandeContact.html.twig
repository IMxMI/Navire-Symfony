{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container my-4 py-4"">
        <h2>Contact</h2>
        {{ form_start(form, {'attr': {'class': 'mb-3'}}) }}
        {{ form_errors(form) }}

        <div class="row">
            <div class="col">
                {{ form_row(form.Nom, { 'label': 'Nom de famille', 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="col">
                {{ form_row(form.Prenom, { 'label': 'Pr√©nom', 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>

        <div class="form-group mb-3">
            {{ form_row(form.Mail, { 'label': 'Mail', 'attr': {'class': 'form-control'} }) }}
        </div>

        <div class="form-group mb-3">
            {{ form_row(form.Message, { 'label': 'Message', 'attr': {'class': 'form-control'} }) }}
        </div>

        <button class="btn btn-success" type="submit">Envoyer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
